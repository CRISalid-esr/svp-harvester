{% extends "./base.html.jinja" %}

{% block head_title %}{% trans %}history_page_title{% endtrans %}{% endblock %}
{% block first_section_title %}{% trans %}history_page_title{% endtrans %}{% endblock %}
{% block first_section_content %}
    <!-- Display tabs -->
    <ul class="nav nav-pills mb-3">
        <li class="nav-item">
            <a class="nav-link {% if subpage == 'collection_history' %} active {% endif %}" href="/admin/history/collection?locale={{ locale }}">{% trans %}history_page_collection_history_link{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if subpage == 'publication_history' %} active {% endif %}" href="/admin/history/publication?locale={{ locale }}">{% trans %}history_page_publication_history_link{% endtrans %}</a>
        </li>
    </ul>

    <!-- Display appropriate content -->
    <input type="hidden" id="subpage-identifier" value="{{ subpage }}">
    {% if subpage == 'collection_history' %}
        {% include 'collection_history.html.jinja' %}
    {% elif subpage == 'publication_history' %}
        {% include 'publication_history.html.jinja' %}
    {% endif %}

{% endblock %}